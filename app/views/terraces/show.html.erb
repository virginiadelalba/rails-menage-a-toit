<div class="d-flex flex-row">
  <%= cl_image_tag @terrace.photos[0].key, width: 1000, height: 600, crop: :fill %>
  <div class="d-flex flex-column">
    <%= cl_image_tag @terrace.photos[1].key, width: 600, height: 300, crop: :fill %>

    <%= cl_image_tag @terrace.photos[2].key, width: 600, height: 300, crop: :fill %>
  </div>
</div>



</div>



<div class="container d-flex mx-auto my-4">



  <div class="terrace-infos mr-3">
    <h1 class='title'> <%= @terrace.title %> </h1>
    <h4 class="address"> <%= @terrace.address %> </h4>
    <p class="capacity">Capacity: <%= @terrace.capacity %></p>
    <p class="description"> <%= @terrace.description %> </p>
  </div>

    <% if current_user == @terrace.user %>
      <div class="owner-div">
        <div class="edit-btn">
          <button class="btn btn-pink"><i class="far fa-edit"></i>  Edit</button>
        </div>
        <div class="delete-btn">
          <button class="btn btn-pink"><i class="far fa-trash-alt"></i>  Delete</button>
        </div>
      </div>
    <% else %>
    <div class="booking-infos px-3 py-2">
      <h3 class="price">â‚¬ <%= @terrace.price %></h3>

      <%= render 'bookings/form'%>
    </div>
  <% end %>

</div>

