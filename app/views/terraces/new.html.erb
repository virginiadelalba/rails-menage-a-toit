<div class="d-flex mt-3">
      <div class="form-upload">
        <div class="post">
          <h3 class="details">Upload the details of your terrace</h3>
          <%= simple_form_for(@terrace) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.input :title %>
            </div>
            <div class="form-inputs">
              <%= f.input :address %>
            </div>
            <div class="form-inputs">
              <%= f.input :description %>
            </div>
            <div class="form-inputs">
              <%= f.input :capacity %>
            </div>
            <div class="form-inputs">
              <%= f.input :price, :label => "Price in â‚¬" %>
            </div>
            <div class="photo-button-container">
              <%= f.input :photos, :label => "Add Terrace Images", as: :file, input_html: { multiple: true } %>
            </div>



            <div class="form-actions mt-5">
              <%= f.button :submit, class: "btn-pink" %>
            </div>
          <% end %>
          <%= link_to 'Back', root_path, class: "btn-back" %>
        </div>
      </div>

      <div class="upload-image">
      </div>

 </div>




