
<div class="post-container">
  <div class="post">
    <%= simple_form_for(@terrace) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
      </div>
      <div class="form-inputs">
        <%= f.input :address %>
      </div>
      <div class="form-inputs">
        <%= f.input :description %>
      </div>
    <!--   <div class="form-inputs">
        <%= f.input :capacity %>
      </div> -->
      <div class="form-inputs">
        <%= f.input :price, :label => "Price in â‚¬" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
  <div class="post">
    <img src="assets/images/terraza_casa_suecia.jpg" alt>
    <h4> Upload the best shot of your terrace! </h4>
  </div>
</div>
